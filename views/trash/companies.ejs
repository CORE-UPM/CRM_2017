

<h1> 
    Fábricas Eliminadas:

    <a href="/goback"><img class="icon" src="/images/back.png"></a>
</h1>

<table>
    <tr>
        <th>
            Borrado
        </th>
        <th>
            Nombre
        </th>

        <th>
        </th>
    </tr>

    <% for (var i in companies) { %> 
        <% var company = companies[i]; %>      

        <tr>
            <td>
                <%= moment(company.deletedAt).format("DD-MM-YYYY") %>
            </td>
            <td>
                <%= company.name %>
            </td>

            <td>
                <% if (session.user && session.user.isAdmin) { %>
                <a href="/trash/companies/<%= company.id %>?_method=POST"><img class="icon" src="/images/restore.png"></a>
                <% } %>


                <% if (session.user && session.user.isAdmin) { %>
                <a href="/trash/companies/<%= company.id %>?_method=DELETE"
                   onClick="return confirm('¿Seguro que quiere borrar DEFINITIVAMENTE la fábrica: <%= company.name %>?');"><img class="icon" src="/images/kill.png"></a>
                <% } %>

            </td>
        </tr>
    <% } %>

</table>

