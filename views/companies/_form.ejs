
	<label>Nombre:</label>
	<input type="text" name="name" value="<%= company.name %>" placeholder="Nombre"  autocomplete="off" autofocus /> <p>

	<h2>
	Clientes:
	</h2>

	<ul>
        <% for (var i in allCustomers) { %>
        <% var customer = allCustomers[i]; %>

		<li>
			<input type="checkbox" name="mainCustomerIds[]" value="<%= customer.id %>" id="customer<%= customer.id %>" >
            <%=  customer.code %> - <%=  customer.name %>
		</li>

        <% } %>
	</ul>

	<!-- Seleccionar (check) los clientes de la fabrica -->

	<script>
        <% for (var i in mainCustomerIds) { %>
        <% var customerId = mainCustomerIds[i]; %>

        document.getElementById("customer<%= customerId %>").checked = true;

        <% } %>
	</script>



