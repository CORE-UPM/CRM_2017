

<h1> 
    Vendedores:

    <a href="/goback"><img class="icon" src="/images/back.png"></a>

    <a href="/salesmen/new"><img class="icon" src="/images/add.png"></a>
</h1>

<table>
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Login
        </th>
        <th>
            
        </th>
    </tr> 

    <% for (var i in salesmen) { %> 
        <% var salesman = salesmen[i]; %>      

        <tr>
            <td>
                <div class="vcenter">

                    <% if (salesman.Photo) { %>
                        <img src="<%= salesman.Photo.url %>" width="30px" />
                    <% } else { %>
                        <img src="/images/face.png" width="30px" />
                    <% } %>

                    <a href="/salesmen/<%= salesman.id %>"> <%= salesman.name %> </a>
                </div>
            </td>

            <td>
                <%= salesman.User && salesman.User.username || "" %>
            </td>

            <td>
                <a href="/salesmen/<%= salesman.id %>?_method=DELETE" 
                   onClick="return confirm('¿Seguro que quiere borrar la fábrica: <%= salesman.name %>?');"><img class="icon" src="/images/basura.png"></a>
            </td>
         </tr> 
    <% } %>

</table>

