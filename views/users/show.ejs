
<h1>
    Usuario

    <a href="/goback"><img class="icon" src="/images/back.png"></a>

    <% if (session.user) { %>

        <% if (session.user.isAdmin || session.user.id === user.id) { %>
          <a href="/users/<%= user.id %>/edit"> 
            <img class="icon" src="/images/edit.png">
          </a>
        <% } %>
       

        <% if (session.user.isAdmin && session.user.id !== user.id) { %>
            <a href="/users/<%= user.id %>?_method=DELETE"
               onClick="return confirm('Borrar cuenta: <%= user.username %>');">
                    <img class="icon" src="/images/basura.png"> 
            </a>
        <% } %>


    <% } %>

</h1>

<p>
  <b>Username:</b>
  <%= user.username %>
</p>

<p>
  <b>Es Administrador:</b>
  <%= user.isAdmin ? "Si" : "No" %>
</p>
