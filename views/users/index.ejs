<h1> 
    Usuarios 

    <a href="/goback"><img class="icon" src="/images/back.png"></a>

    <% if (session.user) { %>
      <a href="/users/new"><img class="icon" src="/images/add.png"></a>
    <% }; %>
</h1>

<%  if (locals.paginate_control) { %>
  <%- paginate_control %>
<% } %>

<table>

    <tr>
        <th>
            Nombre
        </th>
        <th>
            Administrador
        </th>
        <th>
        
        </th>
    </tr>

    <% for (var i in users) { %>

 

    <tr>

      <td> 
        <%= users[i].username %>
      </td>

      <td> 
        <%= users[i].isAdmin ? "Si" : "" %>
      </td>

      <% if (session.user) { %>
        <td>

            <a href="/users/<%= users[i].id %>" ><img class="icon" src="/images/ver.png"></a>

            <% if (session.user.isAdmin || session.user.id === users[i].id) { %>
                <!-- a href="/users/<%= users[i].id %>/edit"><img class="icon" src="/images/edit.png"></a -->
            <% } %>

          <% if (session.user.isAdmin && session.user.id !== users[i].id) { %>
            <a href="/users/<%= users[i].id %>?_method=DELETE" 
               onClick="return confirm('Borrar cuenta: <%= users[i].username %>');">
               <img class="icon" src="/images/basura.png"> 
            </a> 
          <% } %>
        </td>
      <% } %>
    </tr>

  <%  }; %>
</table>



