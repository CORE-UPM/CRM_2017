

<h1> 
    Visitas: 

    <a href="/goback"><img class="icon" src="/images/back.png"></a>

    <a href="/visits/new"><img width="24px" src="/images/add.png"></a>
</h1>

<table>
    <tr>
        <th>
            Cliente
        </th>
        <th>
            Vendedor
        </th>
        <th>
            Planificado
        </th>
        <th>
            Realizado
        </th>
        <th>
            Num.Obj.
        </th>
        <th>
            Observaciones
        </th>
        <th>
            
        </th>
    </tr> 

    <% for (var i in visits) { %> 
        <% var visit = visits[i]; %>      

        <% var salesmanName = visit.Salesman ? visit.Salesman.name : "SIN VENDEDOR"; %>
        <% var customerCode = visit.Customer ? visit.Customer.code : "SIN CLIENTE" %>

        <tr>
            <td>
                <%= customerCode %>
            </td>
            <td>
                <%= salesmanName %>
            </td>
            <td>
                <%= moment(visit.plannedFor).format("DD-MM-YYYY") %>
            </td>
            <td>
            <%= !!visit.fulfilledAt ? moment(visit.fulfilledAt).format("DD-MM-YYYY") : "PENDIENTE" %>
            </td>
            <td>
                <%= visit.Targets.length %>
            </td>
            <td>
                <%= visit.notes === "" ? "No" : "Si" %>
            </td>
            <td>
                <a href="/visits/<%= visit.id %>"><img width="24px" src="/images/ver.png"></a>

                <a href="/visits/<%= visit.id %>/edit"><img width="24px" src="/images/edit.png"></a>

                <a href="/visits/<%= visit.id %>?_method=DELETE" 
                   onClick="return confirm('Â¿Seguro que quiere borrar la visita de <%= salesmanName %> a <%= customerCode %>?');"><img width="24px" src="/images/basura.png"></a>
            </td>
         </tr> 
    <% } %>

</table>

