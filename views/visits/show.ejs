

<% var salesmanName = visit.Salesman ? visit.Salesman.name : "SIN VENDEDOR"; %>
<% var customerCode = visit.Customer ? visit.Customer.code : "SIN CLIENTE" %>
<% var customerName = visit.Customer ? visit.Customer.name : "" %>


<h1> 
    Visita: 

    <a href="/goback"><img class="icon" src="/images/back.png"></a>

    <a href="/visits/<%= visit.id %>/edit"><img class="icon" src="/images/edit.png"></a>

    <% if (session.user && session.user.isAdmin) { %>
		<a href="/visits/<%= visit.id %>?_method=DELETE"
		   onClick="return confirm('¿Seguro que desea borrar la visita de <%= salesmanName %> a <%= customerCode %>?');"><img class="icon" src="/images/basura.png"></a>
    <% } %>

</h1>

<ul>
	<li>
		<b>Cliente</b>: <%= customerCode %> <%= customerName %>
	</li>
	<li>
		<b>Vendedor</b>: <%= salesmanName %>
	</li>
	<li>
		<b>Fecha planificación</b>: <%= moment(visit.plannedFor).format("DD-MM-YYYY") %>
	</li>
	<li>
		<b>Fecha realización</b>: <%= !!visit.fulfilledAt ? moment(visit.fulfilledAt).format("DD-MM-YYYY") : "PENDIENTE" %>
	</li>
	<li>
		<b>Observaciones</b>:  <%- escapeText(visit.notes) %>
	</li>

</ul>


<%  var targets = visit.Targets %>

<%  locals.readwrite = true; %>

<hr />
	<%- include ../targets/index.ejs %>
<hr />
