

<h2> 
    Informes: 
</h2>


<ul>
    <% for (var i in reports) { %> 
        <% var report = reports[i]; %>      
        <% var patient = report.Patient %>
        
        <%  if (!patient) continue; %>
        
        <li>
            Paciente: <b> <%= report.Patient.name %> </b>
            (<%= moment(report.receptionAt).format("DD-MM-YYYY") %>)
            <%= report.doctor %>
            <%= moment(report.receptionAt).format("DD-MM-YYYY") %>
            <%= report.lastMenstruationAt %>
            <%= report.cycleDay %>

            <a href="/patients/<%= patient.id %>/reports/<%= report.id %>?redir=<%= url %>"><button>Ver</button></a>

            <a href="/patients/<%= patient.id %>/reports/<%= report.id %>/edit?redir=<%= url %>"><button>editar</button></a>

            <a href="/patients/<%= patient.id %>/reports/<%= report.id %>?redir=<%= url %>&_method=DELETE" 
               onClick="return confirm('Â¿Seguro que desea borrar el informe de <%= patient.name %>?');">
                   <button>borrar</button>
            </a>

        </li> 
    <% } %>
</ul>

<% var redir = redir || "/reports" %>
<a href="<%= redir %>">
    <button type="button">Volver</button>
</a>
