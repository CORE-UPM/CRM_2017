

<h2> 
    Informes: 
</h2>

<%  if (locals.paginate_control) { %>
  <%- paginate_control %>
<% } %>

<form method="get" action="<%= url %>"  class="right">

    Filtros:

    <br />

    <label>Paciente:</label>
    <input type="text" name="searchpatient" value="<%= locals.searchpatient || '' %>" placeholder="paciente a buscar" autocomplete="off"/>

    <br />

    <label>Doctor:</label>
    <input type="text" name="searchdoctor" value="<%= locals.searchdoctor || '' %>" placeholder="doctor a buscar" autocomplete="off"/>

    <br />

    <label>Desde:</label>
    <input type="text" 
           name="searchdate1" 
           value="<%= locals.searchdate1 || '' %>" 
           placeholder="dd-mm-aaaa" 
           autocomplete="off"/>

    <label>Hasta:</label>
    <input type="text" 
           name="searchdate2" 
           value="<%= locals.searchdate2 || '' %>" 
           placeholder="dd-mm-aaaa" 
           autocomplete="off"/>

    <br />
    <input type="submit" value="Buscar">
</form>

<ul>
    <% for (var i in reports) { %> 
        <% var report = reports[i]; %>      
        <% var patient = report.Patient %>
        
        <%  if (!patient) continue; %>
        
        <li>
            Paciente: <b> <%= report.Patient.name %> </b>
            (<%= moment(report.receptionAt).format("DD-MM-YYYY") %>)
            <%= report.doctor %>
            <%= moment(report.receptionAt).format("DD-MM-YYYY") %>
            <%= report.lastMenstruationAt %>
            <%= report.cycleDay %>

            <a href="/patients/<%= patient.id %>/reports/<%= report.id %>?redir=<%= url %>"><button>Ver</button></a>

            <a href="/patients/<%= patient.id %>/reports/<%= report.id %>/edit?redir=<%= url %>"><button>editar</button></a>

            <a href="/patients/<%= patient.id %>/reports/<%= report.id %>?redir=<%= url %>&_method=DELETE" 
               onClick="return confirm('Â¿Seguro que desea borrar el informe de <%= patient.name %>?');">
                   <button>borrar</button>
            </a>

        </li> 
    <% } %>
</ul>

<% var redir = redir || "/reports" %>
<a href="<%= redir %>">
    <button type="button">Volver</button>
</a>
