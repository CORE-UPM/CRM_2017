

<h2> 
    Informes: 

    <% var redir = redir || "/reports" %>
    <a href="<%= redir %>">
        <img width="24px" src="/images/back.svg">
    </a>
</h2>

<%  if (locals.paginate_control) { %>
  <%- paginate_control %>
<% } %>

<form method="get" action="<%= url %>"  class="right">

    Filtros:

    <br />

    <label>Paciente:</label>
    <input type="text" name="searchpatient" value="<%= locals.searchpatient || '' %>" placeholder="paciente a buscar" autocomplete="off"/>

    <br />

    <label>Doctor:</label>
    <input type="text" name="searchdoctor" value="<%= locals.searchdoctor || '' %>" placeholder="doctor a buscar" autocomplete="off"/>

    <br />

    <label>Desde:</label>
    <input type="text" 
           name="searchdate1" 
           value="<%= locals.searchdate1 || '' %>" 
           placeholder="dd-mm-aaaa" 
           autocomplete="off"/>

    <label>Hasta:</label>
    <input type="text" 
           name="searchdate2" 
           value="<%= locals.searchdate2 || '' %>" 
           placeholder="dd-mm-aaaa" 
           autocomplete="off"/>

    <br />
    <input type="image" width="24px" src="/images/find.svg" border="0" alt="Submit" />
</form>


<table>
    <tr>
        <th>
            Paciente
        </th>
        <th>
            Doctor
        </th>
        <th>
            Fecha
        </th>
        <th>
            
        </th>
    </tr> 

    <% for (var i in reports) { %> 
        <% var report = reports[i]; %>      
        <% var patient = report.Patient %>
        
        <%  if (!patient) continue; %>
        
        <tr>
            <td>
                <%= report.Patient.name %>
            </td>
            <td>
                <%= moment(report.receptionAt).format("DD-MM-YYYY") %>
            </td>
            <td>
                <%= report.doctor %>
            </td>
            <td>
                <a href="/patients/<%= patient.id %>/reports/<%= report.id %>?redir=<%= url %>"><img width="24px" src="/images/ver.svg"></a>

                <a href="/patients/<%= patient.id %>/reports/<%= report.id %>/edit?redir=<%= url %>"><img width="24px" src="/images/edit.svg"></a>

                <a href="/patients/<%= patient.id %>/reports/<%= report.id %>?redir=<%= url %>&_method=DELETE" 
                   onClick="return confirm('Â¿Seguro que desea borrar el informe de <%= patient.name %>?');"><img width="24px" src="/images/basura.svg"></a>
            </td>

        </tr> 
    <% } %>
<table>


