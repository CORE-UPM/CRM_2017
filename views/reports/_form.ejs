
<input type='hidden' name='redir' value='<%= redir %>'>


<p>
  Nombre: <%= patient.name %>
</p>

<p>
  Dirección: <%= patient.address %>
</p>

<p>
  Ciudad: <%= patient.city %>
</p>

<p>
  Telefóno: <%= patient.phone %>
</p>

<p>
  Doctor por defecto: <%= patient.doctor %>
</p>

<p>
	<label>Doctor:</label>
	<input type="text" name="doctor" value="<%= report.doctor %>" placeholder="Doctor"  autocomplete="off" />
</p>

<p>
	<label>Fecha de recepción (dd-mm-aaaa):</label>
	<input type="text" name="receptionAt" 
	       value="<%= moment(report.receptionAt).format("DD-MM-YYYY") %>" 
	       pattern="\d\d-\d\d-\d\d\d\d"
	       placeholder="dd-mm-aaaa" 
	       autocomplete="off" />
</p>

<p>
	<label>Fecha última menstruación:</label>
	<input type="text" name="lastMenstruationAt" 
	       value="<%= report.lastMenstruationAt %>" 
	       placeholder="Fecha última menstruación" 
	       autocomplete="off" />
</p>

<p>
	<label>Día del ciclo:</label>
	<input type="text" name="cycleDay" value="<%= report.cycleDay %>" placeholder="Día del ciclo"  autocomplete="off" />
</p>

