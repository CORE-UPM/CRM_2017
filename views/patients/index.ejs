

<form method="get" action="/patients" class="right vcenter filters">
    <label>Filtrar por nombre:</label>
    <input type="text" name="search" value="<%= locals.search || '' %>" placeholder="nombre a buscar" size="40" autocomplete="off"/>
    <input type="image" width="24px" src="/images/find.png" border="0" alt="Submit" />
</form>


<h1> 
    Pacientes 

    <a href="/patients/new"><img width="24px" src="/images/add.png"></a>
</h1>


<%  if (locals.paginate_control) { %>
  <%- paginate_control %>
<% } %>




<table>
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Doctor
        </th>
        <th colspan=2>
            Informes
        </th>
        <th>
            
        </th>
    </tr> 

    <% for (var i in patients) { %> 
        <% var patient = patients[i]; %>     

        <tr>
            <td>
                <%= patient.name %>
            </td>
            <td>
                <%= patient.doctor %>
            </td>

            <td>
                <a href="/patients/<%= patient.id %>/reports/auto?_method=POST"><img width="24px" src="/images/add.png"></a>

                <a href="/patients/<%= patient.id %>/reports"><img width="24px" src="/images/reports.png" alt="Ver informes"></a>
            </td>

            <td>
                <%= patient.Reports.length %>
            </td>

            <td>
                <a href="/patients/<%= patient.id %>"><img width="24px" src="/images/ver.png"></a>

                <a href="/patients/<%= patient.id %>/edit"><img width="24px" src="/images/edit.png"></a>

                <a href="/patients/<%= patient.id %>?_method=DELETE" 
                   onClick="return confirm('Â¿Seguro que desea borrar la paciente <%= patient.name %> y sus informes?');"><img width="24px" src="/images/basura.png"></a>
            </td>
        </tr> 
    <% } %>
</table>


