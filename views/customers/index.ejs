
<script src="javascripts/misc_form.js"></script>

<form method="get" action="<%= url %>" id="filterForm" class="right filters">
    <div class="vcenter">
        <label>Código/Nombre:</label>
        <input type="text" name="search" value="<%= locals.search || '' %>" placeholder="código o nombre a buscar"
               size="30" autocomplete="off"/>

        <input type="image" class="icon" src="/images/find.png" border="0" alt="Submit"/>

        <input type="image" class="icon" src="/images/cancel.png" border="0"
               onClick="cleanupForm('filterForm')" />
    </div>
</form>

<h1> 
    Clientes:

    <% if (session.user && session.user.isAdmin) { %>
        <a href="/customers/new"><img class="icon" src="/images/add.png"></a>
        <a href="/customers/import"><img class="icon" src="/images/csv2.png"></a>
    <% } %>

</h1>

<%  if (locals.paginate_control) { %>
<%- paginate_control %>
<% } %>

<table>
    <tr>
        <th>
            Código
        </th>
        <th>
            Nombre
        </th>
        <th>
            Dirección
        </th>
        <th colspan=2>
            Visitas
        </th>
        <th>
            
        </th>
    </tr> 

    <% for (var i in customers) { %> 
        <% var customer = customers[i]; %>      

        <tr>
            <td>
                <%= customer.code %>
            </td>
            <td>
                <%= customer.name %>
            </td>
            <td>
                <%= customer.address1 %>
            </td>

            <td>
                <%= customer.Visits.length %>
            </td>

            <td>
                <%= customer.Visits[0] &&  moment(customer.Visits[0].plannedFor).format("DD-MM-YYYY") %>
            </td>

            <td>
                <a href="/customers/<%= customer.id %>"><img class="icon" src="/images/ver.png"></a>

                <% if (session.user && session.user.isAdmin) { %>
                    <a href="/customers/<%= customer.id %>?_method=DELETE"
                       onClick="return confirm('¿Seguro que quiere borrar el cliente: <%= customer.name %>?');"><img class="icon" src="/images/basura.png"></a>
                <% } %>
            </td>
         </tr> 
    <% } %>

</table>

