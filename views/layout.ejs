<!DOCTYPE html>
<html>
  <head>
    <title>CRM Decoversia</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>

    <header class="vcenter">
        <h1>
            <img src="/images/dvr.jpg" width="200px"/> 
            CRM
        </h1>
    </header>

    <nav> 
        .       
        <% if (session.user) { %>
            <a href="/visits">Visitas</a>
            <a href="/statistics">Estadísticas</a>
            <a href="/companies">Fábricas</a>
            <a href="/customers">Clientes</a>
            <a href="/salesmen">Vendedores</a>
            <a href="/targettypes">Tipos_Objetivos</a>
            <a href="/targets">(X-Objetivos-X)</a>

            <% if (session.user.login === "admin") { %>
                <a href="/users">Usuarios</a>
            <% } %>
        <% } %>


        <div class="login right">
            <% if (!session.user) { %>
                <a href="/session">Login</a>
            <% } else { %>
                <%= session.user.username %> 
                <a href="/users/<%= session.user.id %>">Perfil</a>
                <a href="/session?_method=DELETE">Logout</a>

                <% if (session.user.login === "admin") { %>
                    <a href="/users/new">Registrar</a> 
                <% } %>

            <% } %>
        </div>
    </nav>

    <section>
            <% if (messages.info) { %>
               <article id='flashinfo'>
                 <h3>Información de interés:</h3>
                 <ul>
                    <% for (var i in messages.info) { %>
                      <li> <%= messages.info[i] %> </li>
                    <% } %>
                 </ul>
               </article>
            <% } %>

            <% if (messages.success) { %>
               <article id='flashsuccess'>
                 <h3>Tareas completadas con éxito:</h3>
                 <ul>
                    <% for (var i in messages.success) { %>
                       <li> <%= messages.success[i] %> </li>
                    <% } %>
                 </ul>
               </article>
            <% } %>

            <% if (messages.error) { %>
               <article id='flasherror'>
                 <h3>Errores encontrados:</h3>
                 <ul>
                    <% for (var i in messages.error) { %>
                      <li> <%= messages.error[i] %> </li>
                    <% } %>
                 </ul>
               </article>
            <% } %>
    </section>


  <section>
    <div> <%- body %> </div>
  </section>

  <footer class="version">
        <small>Versión: 1</small>
  </footer>

  </body>
</html>
