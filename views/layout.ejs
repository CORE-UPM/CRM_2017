<!DOCTYPE html>
<html>
  <head>
    <title>CRM Decoversia</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>

    <header class="vcenter">
        <h1>
            <a href="/"> <img src="/images/dvr.png" width="200px" class="left" /> </a>
            CRM
        </h1>
    </header>

    <nav> 
        .       
        <% if (session.user) { %>

            <% if (!session.user.isAdmin) { %>
                <a href="/users/<%= session.user.id %>/visits">Mis visitas</a>
            <% } %>

            <a href="/customers">Clientes</a>

            <% if (session.user.isAdmin) { %>
                <a href="/companies">Fábricas</a>
            <% } %>

            <a href="/visits">Visitas</a>

            <% if (session.user.isAdmin) { %>
                <a href="/salesmen">Vendedores</a>
                <a href="/targettypes">Objetivos</a>
            <% } %>

            <a href="/reports">Informes</a>

        <% if (session.user.username === "admin") { %>
                <a href="/users">Usuarios</a>
            <% } %>
        <% } %>


        <div class="login right">
            <% if (!session.user) { %>
                <a href="/session">Entrar</a>
            <% } else { %>
                <a href="/users/<%= session.user.id %>"><span id="loginname"><%= session.user.username %></span></a>
                <a href="/session?_method=DELETE">Salir</a>

                <% if (session.user.username === "admin") { %>
                    <a href="/users/new">Registrar</a>
                <% } %>

            <% } %>
        </div>
    </nav>

    <section>
            <% if (messages.info) { %>
               <article id='flashinfo'>
                 <h3>Información de interés:</h3>
                 <ul>
                    <% for (var i in messages.info) { %>
                      <li> <%= messages.info[i] %> </li>
                    <% } %>
                 </ul>
               </article>
            <% } %>

            <% if (messages.success) { %>
               <article id='flashsuccess'>
                 <h3>Tareas completadas con éxito:</h3>
                 <ul>
                    <% for (var i in messages.success) { %>
                       <li> <%= messages.success[i] %> </li>
                    <% } %>
                 </ul>
               </article>
            <% } %>

            <% if (messages.error) { %>
               <article id='flasherror'>
                 <h3>Errores encontrados:</h3>
                 <ul>
                    <% for (var i in messages.error) { %>
                      <li> <%= messages.error[i] %> </li>
                    <% } %>
                 </ul>
               </article>
            <% } %>
    </section>


  <section>
    <div> <%- body %> </div>
  </section>

  <footer class="version">
        <small>Versión: 15 Febrero 2017</small>
  </footer>

  </body>
</html>
